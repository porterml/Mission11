@{
    Layout = null;
}


@model LoginModel


<html>
<head>
    <meta name="viewport" class="width=device-width" />
    <title>Amazon Bookstore</title>

    <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <div class="bd-dark text-white p-2">
        <span class="navbar-brand m-1-2">Amazon Bookstore</span>
    </div>

    <div class="m-1 p-1">

        <div class="text-danger container" asp-validation-summary="All"></div>

        <form method="post" asp-controller="Account" asp-action="Login">
            
            <div class="row">
                <div class="col-2"></div>
                <div class="form-group col-8">
                    <label asp-for="Username">Username: </label>
                    <input asp-for="Username" class="form-control" />
                </div>
                <div class="col-2"></div>
            </div>

            <div class="row">
                <div class="col-2"></div>
                <div class="form-group col-8">
                    <label asp-for="Password">Password: </label>
                    <input asp-for="Password" class="form-control" type="password" />
                </div>
                <div class="col-2"></div>
            </div>

            <div class="row">
                <div class="col-5"></div>
                <button class="btn btn-primary col-1" type="submit">Log In</button>
                <div class="col-2"></div>
            </div>

            <input type="hidden" asp-for="returnURL" />

        </form>

    </div>


</body>


</html>